---
// Props opcionales para personalizar los círculos
interface Props {
  class?: string;
  variant?: 'default' | 'alt1' | 'alt2';
}

const { class: className = '', variant = 'default' } = Astro.props;
---

<div class={`gradient-circles ${className} variant-${variant}`}>
  <div class="circle circle-1"></div>
  <div class="circle circle-2"></div>
  <div class="circle circle-3"></div>
  <div class="circle circle-4"></div>
</div>

<style>
  .gradient-circles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -5;
    pointer-events: none;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.5;
  }

  /* Variante por defecto - Verde Edén */
  .variant-default .circle-1 {
    width: 40vw;
    height: 40vw;
    top: -10%;
    right: -5%;
    background: radial-gradient(circle, rgba(180, 205, 2, 0.3) 0%, rgba(180, 205, 2, 0.1) 70%, transparent 100%);
    animation: float 20s ease-in-out infinite alternate;
  }

  .variant-default .circle-2 {
    width: 35vw;
    height: 35vw;
    bottom: 5%;
    left: -15%;
    background: radial-gradient(circle, rgba(66, 66, 66, 0.3) 0%, rgba(66, 66, 66, 0.1) 60%, transparent 100%);
    animation: float 15s ease-in-out infinite alternate-reverse;
  }

  .variant-default .circle-3 {
    width: 25vw;
    height: 25vw;
    top: 30%;
    left: 10%;
    background: radial-gradient(circle, rgba(180, 205, 2, 0.2) 0%, rgba(180, 205, 2, 0.05) 70%, transparent 100%);
    animation: float 18s ease-in-out infinite alternate;
  }

  .variant-default .circle-4 {
    width: 30vw;
    height: 30vw;
    bottom: 10%;
    right: 5%;
    background: radial-gradient(circle, rgba(66, 66, 66, 0.2) 0%, rgba(66, 66, 66, 0.05) 60%, transparent 100%);
    animation: float 25s ease-in-out infinite alternate-reverse;
  }

  /* Variante alternativa 1 - Tonos verdes más claros */
  .variant-alt1 .circle-1 {
    width: 40vw;
    height: 40vw;
    top: -5%;
    right: 10%;
    background: radial-gradient(circle, rgba(200, 230, 100, 0.3) 0%, rgba(180, 205, 2, 0.1) 70%, transparent 100%);
    animation: float 22s ease-in-out infinite alternate;
  }

  .variant-alt1 .circle-2 {
    width: 35vw;
    height: 35vw;
    bottom: 15%;
    left: -5%;
    background: radial-gradient(circle, rgba(100, 100, 100, 0.3) 0%, rgba(80, 80, 80, 0.1) 60%, transparent 100%);
    animation: float 17s ease-in-out infinite alternate-reverse;
  }

  .variant-alt1 .circle-3 {
    width: 25vw;
    height: 25vw;
    top: 40%;
    left: 15%;
    background: radial-gradient(circle, rgba(220, 240, 120, 0.2) 0%, rgba(200, 220, 80, 0.05) 70%, transparent 100%);
    animation: float 19s ease-in-out infinite alternate;
  }

  .variant-alt1 .circle-4 {
    width: 30vw;
    height: 30vw;
    bottom: 5%;
    right: 10%;
    background: radial-gradient(circle, rgba(90, 90, 90, 0.2) 0%, rgba(70, 70, 70, 0.05) 60%, transparent 100%);
    animation: float 24s ease-in-out infinite alternate-reverse;
  }

  /* Variante alternativa 2 - Contrastes más fuertes */
  .variant-alt2 .circle-1 {
    width: 40vw;
    height: 40vw;
    top: 5%;
    right: -10%;
    background: radial-gradient(circle, rgba(160, 185, 0, 0.35) 0%, rgba(160, 185, 0, 0.1) 60%, transparent 100%);
    animation: float 21s ease-in-out infinite alternate;
  }

  .variant-alt2 .circle-2 {
    width: 35vw;
    height: 35vw;
    bottom: 0%;
    left: 5%;
    background: radial-gradient(circle, rgba(50, 50, 50, 0.35) 0%, rgba(50, 50, 50, 0.1) 60%, transparent 100%);
    animation: float 16s ease-in-out infinite alternate-reverse;
  }

  .variant-alt2 .circle-3 {
    width: 30vw;
    height: 30vw;
    top: 50%;
    left: -5%;
    background: radial-gradient(circle, rgba(190, 215, 10, 0.25) 0%, rgba(190, 215, 10, 0.05) 70%, transparent 100%);
    animation: float 19s ease-in-out infinite alternate;
  }

  .variant-alt2 .circle-4 {
    width: 25vw;
    height: 25vw;
    bottom: 20%;
    right: 15%;
    background: radial-gradient(circle, rgba(60, 60, 60, 0.3) 0%, rgba(60, 60, 60, 0.05) 60%, transparent 100%);
    animation: float 23s ease-in-out infinite alternate-reverse;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(2%, 2%) scale(1.05);
    }
    100% {
      transform: translate(-2%, -1%) scale(0.95);
    }
  }

  @media (max-width: 768px) {
    .circle-1 {
      width: 60vw;
      height: 60vw;
    }
    .circle-2 {
      width: 50vw;
      height: 50vw;
    }
    .circle-3 {
      width: 40vw;
      height: 40vw;
    }
    .circle-4 {
      width: 45vw;
      height: 45vw;
    }
  }
</style> 