---
import SectionTitle from "../Section-Title/Section-Title.astro"
import CategoryButton from "./CategoryButton.astro"

const entrenamientos = [
	{id: 1, name: 'Entrenamientos Presenciales', description: 'Entrenamientos presenciales en el local Eden Terrassa'},
	{id: 2, name: 'Adán', description: 'Entrenamientos para niños y niñas de 6 a 12 años'},
	{id: 3, name: 'Entrenamientos Maestros de niños', description: 'Entrenamientos para maestros de niños de 6 a 12 años'},
	{id: 4, name: 'Recursos de Formación Infantil', description: 'Recursos de formación para maestros de niños de 6 a 12 años'},
	{id: 5, name: 'Entrenamientos Equipos de alabanzas', description: 'Entrenamientos para equipos de alabanzas'},
	{id: 6, name: 'Entrenamientos Finanzas', description: 'Entrenamientos para el área de finanzas'},
	{id: 7, name: 'Entrenamientos Adolecentes', description: 'Entrenamientos para adolecentes de 13 a 17 años'},
	{id: 8, name: 'Entrenamientos Liderazgo', description: 'Entrenamientos para líderes'},
]
---

<section class="sectionEntrenamientos">
	<SectionTitle>
		Actividades y Reuniones
	</SectionTitle>
	<div class="entrenamientos-cards-grid">
		<div class="entrenamiento-card card-gps">
			<h3>Entrenamiento GPS</h3>
			<p class="entrenamiento-horario"><strong>Miércoles 20:00 hs</strong> <span class="modo-online">(Zoom)</span></p>
			<p class="entrenamiento-desc">Estudio de los conceptos espirituales de la Biblia. Abierto a todos los que deseen profundizar en la fe y el conocimiento bíblico.</p>
		</div>
		<div class="entrenamiento-card card-reunion">
			<h3>Reunión Presencial</h3>
			<p class="entrenamiento-horario"><strong>Sábados 10:00 hs</strong> <span class="modo-presencial">(Presencial)</span></p>
			<p class="entrenamiento-desc">Comenzamos compartiendo un café, y a las 11:00 realizamos la reunión principal.</p>
		</div>
		<div class="entrenamiento-card card-online-destacada">
			<h3>Transmisión Online</h3>
			<p class="entrenamiento-horario"><strong>Sábados 11:00 hs</strong> <span class="modo-online">(Online)</span></p>
			<p class="entrenamiento-desc">Sigue la reunión en vivo desde cualquier lugar a partir de las 11:00 hs. ¡No te lo pierdas!</p>
		</div>
	</div>
</section>

<style>
	.sectionEntrenamientos {
		width: 100%;
		min-height: 100vh; /* Cambiado de height fijo a min-height */

		padding: 100px 25px 50px 25px; /* Aumentado el padding inferior */

		/* color: #f7f7f7; */
		background-color: #333;
		position: relative;

	}


	
	.entrenamientos-cards-grid {
		width: 100%;
		max-width: 1300px;
		margin: 0 auto;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-around;
		align-items: center;
		gap: 2.5rem;
		margin-top: 5.5rem;
		height: 100%;
	}
	.entrenamiento-card {
		background: #232323;
		border: 3px solid #B4CD02;
		border-radius: 2rem;
		box-shadow: 0 4px 24px rgba(0,0,0,0.10);
		padding: 2.2rem 2rem 1.5rem 2rem;
		min-width: 280px;
		max-width: 370px;
		flex: 1 1 0;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		min-height: 340px;
		height: 100%;
		transition: box-shadow 0.2s, border 0.2s;
	}
	.entrenamiento-card h3 {
		color: #B4CD02;
		font-size: 2rem;
		margin-bottom: 0.7rem;
		font-weight: 700;
		letter-spacing: 0.02em;
	}
	.entrenamiento-horario {
		font-size: 1.15rem;
		margin-bottom: 0.7rem;
		color: #fff;
	}
	.modo-online {
		background: rgba(180,205,2,0.18);
		color: #B4CD02;
		border-radius: 0.5em;
		padding: 0.08em 0.35em;
		font-weight: 700;
		margin-left: 0.5em;
	}
	.modo-presencial {
		background: rgba(180,205,2,0.10);
		color: #B4CD02;
		border-radius: 0.5em;
		padding: 0.08em 0.35em;
		font-weight: 700;
		margin-left: 0.5em;
	}
	.entrenamiento-desc {
		color: #eaeaea;
		font-size: 1.05rem;
		margin-bottom: 0;
		margin-top: 0.5rem;
		line-height: 1.5;
	}
	/* Card destacada para online */
	.card-online-destacada {
		background: linear-gradient(120deg, #B4CD02 0%, #eaf7b1 100%);
		color: #232323;
		border: 3px solid #B4CD02;
		box-shadow: 0 6px 32px rgba(180,205,2,0.18);
		position: relative;
		z-index: 2;
	}
	.card-online-destacada h3,
	.card-online-destacada .entrenamiento-horario {
		color: #232323;
	}
	.card-online-destacada .entrenamiento-desc {
		color: #232323;
	}
	.card-online-destacada .modo-online {
		background: #232323;
		color: #B4CD02;
	}
	@media (max-width: 900px) {
		.entrenamientos-cards-grid {
			flex-direction: column;
			align-items: center;
			gap: 1.5rem;
		}
		.entrenamiento-card {
			min-width: 90vw;
			max-width: 98vw;
			padding: 1.5rem 1rem 1.2rem 1rem;
		}
		.entrenamiento-card h3 {
			font-size: 1.4rem;
		}
		.entrenamiento-desc {
			font-size: 0.98rem;
		}
	}
	@media (max-width: 1024px) {
		.entrenamientos-category-content {
			padding: 15px 0;
			gap: 12px;
		}
	}

	@media (max-width: 768px) {
		.sectionEntrenamientos {
			padding: 80px 15px 40px 15px; /* Reducido el padding en móviles */
		}

		.entrenamientos-category-content {
			justify-content: center;
			flex-direction: column;
			gap: 10px;
		}
	}

	@media (max-width: 480px) {
		.sectionEntrenamientos {
			padding: 60px 10px 30px 10px; /* Aún más reducido para móviles pequeños */
		}
	}
</style>


