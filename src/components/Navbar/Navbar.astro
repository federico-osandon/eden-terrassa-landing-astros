---
<header>
	<nav>
		<div class="brand-content">
				<!-- <a class="brand" href="/" aria-current="page">EDEN</a> -->
				<a class="brand" href="/" aria-current="page">
					<img src="/eden-logo.svg" class="Logo-eden" alt="Logo-eden" />
				</a>
		</div>
		<div class="menu-hamb-content">
			  <!-- <img class="menu-hamb" src="/menu-hamb.svg" alt="menu" /> -->
			  <MenuHamb />
		</div>
	</nav>
	
</header>


<style>

	header {
		;
		display: flex;
		flex-direction: column;
		/* justify-content: center;
		align-items: center; */
		width: 100%;
		height: 100%;
	}
    nav {
		position: fixed;
		width: 100%;

		display: flex;
		flex-direction: row;
		flex-wrap: initial;

		align-items: center;
		justify-content: space-between;
		padding: 0.5rem;
		gap: 0.5rem;
		/* border-bottom: solid 1px #aaa; */
		/* background-color: #eee; */
		z-index: 10;
	}

	.brand {
		display: inline-block;
		min-width: 9rem;
		padding: 0.5rem;
		font-family: 'chalkboard', sans-serif;
		font-size: 1rem;
		font-weight: bolder;
		/* border-radius: 0.2rem;
		border: solid 1px #aaa; */
