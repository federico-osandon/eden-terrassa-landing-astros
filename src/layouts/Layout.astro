---
import Footer from '../components/Footer/Footer.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>	
</html>
<style is:global>
	
	@font-face {
		font-family: 'Chalkboard';
		/* src: url('/fonts/chalkboard.ttf') format('truetype'); */
		font-weight: normal;
		font-style: normal;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		/* overflow: hidden; */
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;		
	}
	body {
		width: 100%;
		min-height: 100vh;

		background-color: #333;
		/* background-color: #ddd; */
		color: #f7f7f7f7;
	}

	.hr_custom {
		top: 0;
		height: 3px; /* Equivalente a h-[2px] en Tailwind */
		width: 90%; /* Equivalente a w-full en Tailwind */
		min-width: 18rem; /* Equivalente a min-w-[18rem] en Tailwind */
		border-top: 0; /* Equivalente a border-t-0 en Tailwind */
		background: transparent; /* Equivalente a bg-transparent en Tailwind */
		background-image: linear-gradient(to right, transparent, #78866b, transparent); /* Equivalente a bg-gradient-to-r from-transparent via-white to-transparent en Tailwind */
		background-position: center;
	}

	h2 {
		/* font-family: 'chalkboard'; */
		font-size: 40px;
		
	}
</style>
